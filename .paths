if [ ! -d $HOME/$XDG_CONFIG_HOME ]; then
    mkdir -v $HOME/.config


elif [ ! -d $HOME/$XDG_CACHE_HOME ]; then
    mkdir -v $HOME/.cache


elif [ ! -d $HOME/$XDG_DATA_HOME ]; then
    mkdir -v -p $HOME/.local/share


elif [! -d $HOME/$XDG_STATE_HOME ]; then
    mkdir -v $HOME/$XDG_DATA_HOME/state
fi



